
{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Secret": "your-secret-key-must-be-at-least-32-characters-long-for-security"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "transactions-route": {
        "ClusterId": "transactions-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/transactions/{**catch-all}"
        }
      },
      "fraud-route": {
        "ClusterId": "fraud-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/fraud/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://authservice:5100"
          }
        }
      },
      "transactions-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://transactionservice:5200"
          }
        }
      },
      "fraud-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://fraudservice:5300"
          }
        }
      }
    }
  }
}
